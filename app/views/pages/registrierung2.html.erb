<script>
  document.getElementById("email-placeholder").innerText = sessionStorage.getItem("email")
  const buttonCode = document.getElementById("button-code");
  buttonCode.addEventListener("click", saveCode);

  function saveCode() {
    const array = document.querySelectorAll("input");
    let code = "";
    array.forEach(element => code = code + element.value);
    sessionStorage.setItem("code", code);
  }
</script>
